<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:minWidth="300dp"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light">
        <ImageView
            android:id="@+id/ivPhoto1"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/text"
            android:layout_weight="1"
            android:textSize="32sp"
            android:textStyle="bold"
            android:text="0"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/ivPhoto2"
            android:layout_alignParentRight="true"
            android:layout_width="44dp"
            android:layout_height="44dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableRow>
                    <TableLayout>
                        <TableRow>
                            <Button android:id="@+id/btn7"
                                android:text="7"
                                />
                            <Button android:id="@+id/btn8"  android:text="8"/>
                            <Button android:id="@+id/btn9" android:text="9"/>
                        </TableRow>
                        <TableRow>
                            <Button android:text="4"
                                android:id="@+id/btn4" />
                            <Button android:text="5" android:id="@+id/btn5"/>
                            <Button android:text="6" android:id="@+id/btn6"/>
                        </TableRow>
                    </TableLayout>
                    <Button
                        android:id="@+id/btnMax"
                        android:textSize="20sp"
                        android:text="MAX"
                        android:layout_height="match_parent"/>
                </TableRow>
                <TableRow>
                    <TableLayout>
                        <TableRow>
                            <Button android:id="@+id/btn1" android:text="1"/>
                            <Button android:id="@+id/btn2" android:text="2"/>
                            <Button android:id="@+id/btn3" android:text="3"/>
                        </TableRow>
                        <TableRow>
                            <Button android:id="@+id/btn0"
                                android:text="0" />
                            <Button
                                android:text="00"
                                android:id="@+id/btn00"
                                android:layout_span="2"/>
                        </TableRow>
                    </TableLayout>
                    <Button
                        android:id="@+id/btnDel"
                        android:text="DEL"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_height="match_parent"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancel"
            android:text="CANCEL"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow"/>
        <Button
            android:id="@+id/confirm"
            android:text="CONFIRM"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"/>
    </LinearLayout>
</LinearLayout>